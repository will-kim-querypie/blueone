{
  "name": "@blueone/server",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" -r tsconfig-paths/register --files src/app.ts",
    "build": "tsc -p .",
    "start": "cross-env NODE_ENV=production pm2 start dist/src/app.js --node-args=\"-r ts-node/register/transpile-only -r tsconfig-paths/register\" && pm2 monit",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --fix --ext .ts",
    "clean": "rm -rf node_modules",
    "restart": "npm run exit && npm run build && npm run start",
    "exit": "pm2 kill",
    "db:create": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register --files src/config/exec.ts --create",
    "db:migrate": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register --files src/config/exec.ts --migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "node-schedule-tz": "^1.2.1-4",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pm2": "^5.1.2",
    "sequelize": "^6.12.0-beta.2",
    "sequelize-cli": "^6.3.0",
    "session-file-store": "^1.5.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/session-file-store": "^1.2.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "optionalDependencies": {
    "@blueone/eslint-config-base": "file:*"
  }
}
